{
  "name": "@muhlba91/muehlbachler-mail-services-infrastructure",
  "version": "0.0.0",
  "description": "Personal Mail Services - Infrastructure",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "repository": "https://github.com/muhlba91/muehlbachler-mail-services-infrastructure",
  "license": "MIT",
  "keywords": [
    "pulumi",
    "muehlbachler",
    "services",
    "mail"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint --fix",
    "lint": "eslint",
    "watch:build": "tsc -p tsconfig.json -w",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
    "doc:json": "typedoc src/ --exclude **/*.spec.ts --json build/docs/typedoc.json"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@pulumi/aws": "^6.44.0",
    "@pulumi/command": "^1.0.0",
    "@pulumi/gcp": "^7.0.0",
    "@pulumi/hcloud": "^1.19.1",
    "@pulumi/postgresql": "^3.11.1",
    "@pulumi/pulumi": "^3.69.0",
    "@pulumi/random": "^4.13.0",
    "@pulumi/tls": "^5.0.0",
    "@pulumi/vault": "^6.1.0",
    "bcryptjs": "^2.4.3",
    "crypto": "^1.0.1",
    "nunjucks": "^3.2.4",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/nunjucks": "^3.2.2",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-functional": "^7.0.0",
    "eslint-plugin-import": "^2.29.1",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.1"
  },
  "files": [
    "build/main",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "prettier": {
    "singleQuote": true
  }
}